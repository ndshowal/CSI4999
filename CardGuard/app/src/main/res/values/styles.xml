<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:buttonStyle">@style/CGButton</item>
        <item name="android:editTextStyle">@style/CGEdit</item>
        <item name="android:windowBackground">@drawable/bg_light</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        +        <item name="windowNoTitle">true</item>
        +    </style>
    +
    +    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    +
    +    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CGButton">
        <item name="android:borderlessButtonStyle" />
        <item name="android:background">@drawable/background_bg</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CGButtonDark" parent="CGButton">
        <item name="android:borderlessButtonStyle" />
        <item name="android:background">@drawable/button_dark</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

   <style name="CGEdit">
       <item name="android:background">@drawable/input_bg</item>
   </style>
</resources>
