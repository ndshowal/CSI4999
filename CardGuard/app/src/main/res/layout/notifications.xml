<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.newtest.test.test.Notifications">

    <TextView
        android:id="@+id/notifications_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notifications"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058" />

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="381dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="121dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/respond_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3/19/2018 ampolito accepted your payment of $15"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.377"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.223" />

            <Button
                android:id="@+id/respond_button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3/17/2018 jivezaj declined your request for $20"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.375"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.498" />

            <Button
                android:id="@+id/respond_button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3/12/2018 kypawloski requested to give you $5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.275"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.927" />

            <Button
                android:id="@+id/respond_button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3/15/2018 zzhao requested $30 from you"
                tools:layout_editor_absoluteX="106dp"
                tools:layout_editor_absoluteY="240dp" />
        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
